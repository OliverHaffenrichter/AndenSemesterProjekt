@page
@model AndenSemesterProjekt.Pages.Products.DisplayCategoriesModel
@{
}


<a asp-page="DisplayProducts"><h1>Vis alle ydelser</h1></a>
<div class="row row-cols-3 g-2">
    @foreach (var item in Model.Categories)
    {
        <div class="flex-column">
            <div class="card">

                <div class="card-header">
                    <form method="post">
                        <a asp-page="/Products/DisplayProducts" asp-page-handler="ProductsByCat" asp-route-category="@item.ProductCategory">
                    <h1>@item.ProductCategory</h1>
                    </a>
                    </form>
                    <div class="card-img">
                        <h2>Card Image</h2>
                    </div>
                    <div class="card-body">
                        <h3>Card Body</h3>
                    </div>
                    <div class="card-footer">
                        <h3>Card Footer</h3>
                    </div>
                </div>
            </div>
        </div>

    }
